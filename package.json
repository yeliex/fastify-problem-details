{
  "name": "@yeliex/fastify-problem-details",
  "version": "1.0.0",
  "description": "Problem Details for HTTP APIs (RFC 9457) implementation for fastify (or pure nodejs)\n",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "pkgroll --clean",
    "test:type": "tsc --noEmit",
    "test:unit": "tsx --test src/*.test.ts",
    "test:coverage": "tsx --test --experimental-test-coverage src/*.test.ts",
    "test": "pnpm run /test:.*/",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "keywords": [
    "problem",
    "problem-details",
    "fastify",
    "fastify-plugin",
    "rfc9457",
    "rfc7807"
  ],
  "author": "yeliex <yeliex@yeliex.com>",
  "homepage": "https://github.com/yeliex/fastify-problem-details",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "@fastify/error": "^4.2.0",
    "accepts": "^1.3.8",
    "fastify-plugin": "^5.0.1",
    "statuses": "^2.0.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@tsconfig/node20": "^20.1.6",
    "@tsconfig/strictest": "^2.0.5",
    "@types/accepts": "^1.3.7",
    "@types/node": "^20.19.2",
    "@types/statuses": "^2.0.6",
    "husky": "^9.1.7",
    "pkgroll": "^2.13.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "fastify": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
