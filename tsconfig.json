{
  "extends": ["@tsconfig/strictest", "@tsconfig/node20"],
  "compileOnSave": false,
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "useDefineForClassFields": true,
    "noPropertyAccessFromIndexSignature": false,
    "exactOptionalPropertyTypes": false
  },
  "include": [
    "src/**/*.ts"
  ]
}
